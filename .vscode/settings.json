{
  "eslint.useFlatConfig": true,
  "editor.formatOnSave": true,
  "cSpell.words": [
    "smartmirror",
    "strava"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "csharp": false,
    "shellscript": false,
    "todo": false,
    "go": true,
    "properties": false
  },

  // go-specific settings
  "go.formatTool": "goimports",
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
}
